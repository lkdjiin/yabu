$LOAD_PATH.unshift File.dirname(__FILE__) + '/../lib'
$YABU_PATH = File.expand_path(File.dirname(__FILE__)) + '/..'

require 'yabu'

# Install configuration files in user's home if there is the first
# run of Yabu.
installer = Yabu::Installer.new
if installer.install_needed?
	installer.install
elsif installer.upgrade_needed?
	installer.upgrade
end

# time of program start
t1 = Time.now

# Backup (or recover)
options = Options.new
Log.instance.level = Log::INFO unless options[:test]
main = Yabu::Main.new(options, CommandParser.new)
main.run

# End of program, calculate and write elapsed time.
seconds = Time.now.to_i - t1.to_i
minutes = (seconds / 60).to_i
seconds %= 60
puts "Done in #{minutes} minutes #{seconds} seconds"
